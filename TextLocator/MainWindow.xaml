                                    IsShowTotal="True"
                                    IsShowPageSize="True"
                                    PageIndex="{Binding PageIndex}"
                                    PageSize="{Binding PageSize}"
                                    Total="{Binding TotalCount}"
                                    PageIndexChanged="PageBar_PageIndexChanged"
                                    PageSizeChanged="PageBar_PageSizeChanged"
                                    CurrentBackground="{DynamicResource Accent}"
                                    CurrentForeground="{DynamicResource AccentForeground}"/>
                            </StackPanel>
                        </Grid>
                        <!-- 分割线 -->
                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" ShowsPreview="False" Background="Gray" />
                        <!-- 右边 -->
                        <Grid Grid.Column="3">
                            <!-- 预览操作 -->
                            <Grid Height="40" VerticalAlignment="Top" Background="#F3F3F3">
                                <!-- 打开文件 -->
                                <Image x:Name="OpenFile" Source="/Resource/btn_file.png" ToolTip="打开文件" HorizontalAlignment="Left" Margin="10,5,0,5" MouseUp="OpenFile_MouseUp"/>
                                <!-- 打开文件夹 -->
                                <Image x:Name="OpenFolder" Source="/Resource/btn_folder.png" ToolTip="打开文件夹" HorizontalAlignment="Left" Margin="50,5,0,5" MouseUp="OpenFolder_MouseUp"/>

                                <!-- 文件信息 -->
                                <Grid Margin="0,0,10,0" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right">
                                    <!-- 图标 -->
                                    <Image x:Name="PreviewFileTypeIcon"  Source="/Resource/ext/word.png" Margin="10,5,0,5" HorizontalAlignment="Left"/>
